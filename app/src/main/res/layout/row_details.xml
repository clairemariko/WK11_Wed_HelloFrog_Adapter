<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66cdaa">




    <ImageView

        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/img_thumbnail"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"/>



    <TextView
        android:text="NAME"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_text_name"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_thumbnail"
        android:layout_alignTop="@id/img_thumbnail"/>

    <TextView
        android:text="SPECIES"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_text_species"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/img_thumbnail"
        android:layout_marginTop="15dp"
        android:layout_below="@id/row_text_name"/>

    <ImageView
        android:id="@+id/image_favourited"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@android:drawable/star_big_on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#66cdaa"/>



</RelativeLayout>